---
layout: compress
permalink: /tags.json
---
{
  {% for tag in site.tags %}
  "{{ tag[0] }}":[
    {% for post in tag[1] %}{
      "category"  : "{{ post.category }}",
      "title"    : "{{ post.title }}",
      "url"     : "{{ post.url }}",
      "date"     : "{{ post.date }}"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}]{% unless forloop.last %},{% endunless %}
  {% endfor %}
}
